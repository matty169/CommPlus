

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

	<div class="row">
		<div class="span6">
  			<h1>Sign up</h1>	
  			<%= f.input :email, :autofocus => true  %>
  			<%= f.input :password %>
  			<%= f.input :password_confirmation %>
  		</div>
  	</div>	

  	<hr class = "seperator">
  	<h1>Personal Info</h1>	
  	<div class = "row">
  		<div class = "span6">
  			<%= f.input :name %>
  			<%= f.input :description, as: :text %>
  		</div>
  		<div class = "span6">
  			<%= f.file_field :photo %>
  			<%= f.hidden_field :photo_cache %>
  		</div>
  	</div>

  	<hr class = "seperator">
  	<h1>Skills</h1>	
  	<div class = "row">
  		<div class = "span6">
  			<div class="items">
    			<%= f.nested_fields_for :skills do |f| %>
      			<fieldset class="item">
        			<%= f.input :name %>

        			<a href="#" class="remove">remove</a>

        			<%= f.hidden_field :id %>
        			<%= f.hidden_field :_destroy %>
      			</fieldset>
    			<% end %>
  			</div>
  			<a href="#" class="add">add skill</a>
  		</div>
  		<div class = "span6">

  		</div>
  	</div>


  	<%= f.button :submit %>

<% end %>
