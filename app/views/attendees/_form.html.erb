<%= form_for(@attendee,:html => {:id => "attendee_form"}, remote: true) do |f| %>

  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :event_id %>
  <%= f.radio_button :teach, true %><%= f.label "Teacher" %>
  <%= f.radio_button :teach, false %><%= f.label "Learner" %>
  <%= f.submit %>

<% end %>
